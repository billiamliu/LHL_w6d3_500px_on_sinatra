<!DOCTYPE html>
<html lang="en">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.0.16/css/bulma.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="/stylesheets/application.css">
  <link href='https://api.mapbox.com/mapbox.js/v2.3.0/mapbox.css' rel='stylesheet' />
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script src="/javascript/application.js"></script>

  <!-- NOTE: this is the modified SDK, rerouted to '/mapbox' for API key injection -->
  <script src='/javascript/mapbox.2.3.0.js'></script>

  <title>500px on Maps</title>
</head>
<body>
  <billiam>
    <section class="hero is-primary">
      <div class="hero-content">
        <div class="container is-logo">
          <a href="/">
            <img src="/images/500px.png" alt="500px Logo">
            <span class="subtitle">on</span>
            <img src="/images/mapbox.png" alt="mapbox Logo">
          </a>
        </div>
      </div>
    </section>
  </billiam>

  <header class="header">
    <div class="container">
      <!-- Left side -->
      <div class="header-left is-hidden-mobile">
        <a id="tab_500px" class="header-tab">
          500px
        </a>
        <a id="tab_500maps" class="header-tab">
          500maps
        </a>
        <a id="tab_settings" class="header-tab">
          Settings
        </a>
      </div>
      <!-- Hamburger menu (on mobile) -->
        <div class="header is-centered is-hidden-tablet">
          <a id="mobi_500px" class="header-tab">500px</a>
          <a id="mobi_500maps" class="header-tab">500maps</a>
          <a id="mobi_settings" class="header-tab">settings</a>
        </div>

      <!-- Right side -->
      <div class="header-right header-menu">
        <a class="header-item" id="header_right">
          <img src="/images/500px.png" alt="500px Logo">
          <span class="subtitle">on</span>
          <img src="/images/mapbox.png" alt="mapbox Logo">
        </a>
      </div>
    </div>
  </header>

  <%= yield %>

  <footer class="footer">
  <div class="container">
    <div class="content is-centered">
      <p class="is-text-centered">
        a JS, jQuery, JSON, and 3rd-party API practice by <a href="https://github.com/billiamliu" target="_blank">Billiam</a>
      </p>
      <p class="is-text-centered">
        <a class="icon" href="https://github.com/billiamliu/LHL_w6d3_500px_on_sinatra" target="_blank">
          <i class="fa fa-github"></i>
        </a>
      </p>
    </div>
  </div>
</footer>

</body>
</html>
